  <title>Test RP</title>
  <style>
    body {
      background-color: #f8f9fa;
      /* Color de fondo */
    }

    .colorFoter{
      background-color: #0056b3;
      color: black;
    }
    .container {
      text-align: center;
      padding-top: 50px;
    }

    .container form {
      background-color: #ffffff;
      /* Fondo del formulario */
      border-radius: 10px;
      /* Bordes redondeados */
      padding: 20px;
      box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    }

    .container h3 {
      font-size: 24px;
      /* Tamaño de fuente del título */
      margin-bottom: 20px;
    }

    .form-label {
      font-weight: bold;
      /* Texto de etiqueta en negrita */
    }

    .btn-primary {
      background-color: #007bff;
      /* Color de botón */
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      /* Color de botón al pasar el cursor */
    }

    .custom-select {
      width: 300px;
      /* Ajusta el ancho deseado */
    }

    .navColor{
      background-color: #007bff;
      font-family: 'Times New Roman', Times, serif;
    }
